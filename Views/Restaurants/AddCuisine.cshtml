@{
  Layout = "_Layout";
}

@model UniversityRoster.Models.Restaurant

<h2>Add a cuisine</h2>

<h4>Add a cuisine to this task: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
